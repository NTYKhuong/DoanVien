<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>QUẢN LÝ ĐOÀN VIÊN</title>
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Css/Style.css" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="https://cdn.tiny.cloud/1/ultmvk498vcdo4m3fhmoyqwxdm37v26c5uuhf82vwb9t28vu/tinymce/6/tinymce.min.js" referrerpolicy="origin"></script>
    @RenderSection("Scripts", required: false)
    <style>
       
    </style>
</head>

<body>
    <div class="sidebar">
        <h2>ADMIN</h2>
        <div class="logo">
            <img src="~/Image/ntyk.jpg" alt="logo" class="admin-avatar" />
        </div>
        <nav>
            <ul>
                <li><a href="@Url.Action("Index", "DoanVien")" data-name="Đoàn Viên"><i class="fas fa-users"></i> Đoàn Viên</a></li>
                <li><a href="@Url.Action("ChiDoan", "ChiDoan")" data-name="Chi Đoàn"><i class="fas fa-users-cog"></i> Chi Đoàn</a></li>
                <li><a href="@Url.Action("HoatDong", "HoatDong")" data-name="Hoạt Động"><i class="fas fa-calendar-alt"></i> Hoạt Động</a></li>
                <li><a href="@Url.Action("ThongKe", "ThongKe")" data-name="Thống Kê"><i class="fas fa-chart-bar"></i> Thống Kê</a></li>
                <li><a href="@Url.Action("DangXuat", "DangXuat")" data-name="Thoát"><i class="fas fa-sign-out-alt"></i> Thoát</a></li>
            </ul>
        </nav>
    </div>

    <div class="main-content">
        <div>
            @RenderBody()
        </div>
    </div>

    <script>
        // JavaScript để cập nhật tên mục
        document.querySelectorAll('.sidebar nav a').forEach(function (menuItem) {
            menuItem.addEventListener('click', function (event) {
                document.getElementById('current-page').textContent = this.getAttribute('data-name');
                window.location.href = this.href; // Chuyển hướng đến liên kết
            });
        });
    </script>
</body>

</html>