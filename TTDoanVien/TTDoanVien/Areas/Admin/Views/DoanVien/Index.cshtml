@using System.Linq

@{
    ViewBag.Title = "Index";
}

<h3>Thông Tin Đoàn Viên</h3>
<div class="d-flex justify-content-between align-items-center mb-3">
    <p>
        @Html.ActionLink("+ Thêm mới", "Create", "DoanVien", null, new { @class = "btn btn-primary" })
    </p>
    <form class="form-inline" method="get" action="@Url.Action("Index", "DoanVien")">
        <div class="input-group" style="width: 650px;">
            <input type="text" class="form-control" name="search" placeholder="Tìm kiếm" aria-label="Search" />
            <div class="input-group-append">
                <button class="btn btn-outline-secondary" type="submit" style="height: 88%;">
                    <i class="fas fa-search"></i>
                </button>
            </div>
        </div>
    </form>
</div>

<table class="table table-striped table-responsive">
    <thead>
        <tr>
            <th>#</th>
            <th>Họ Tên</th>
            <th>Ảnh</th>
            <th>Ngày Sinh</th>
            <th>Địa Chỉ</th>
            <th>Số Điện Thoại</th>
            <th>Ngày Vào Đoàn</th>
            <th>Tên Chi Đoàn</th>
            <th>Thao Tác</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.MaDoanVien</td>
                    <td>@item.HoTen</td>
                    <td><img src="~/Image/Hinh/@item.Anh" alt="Ảnh @item.HoTen" style="object-fit: cover; max-width: 40px; height: auto; " /></td>
                    <td>@item.NgaySinh.ToString("dd/MM/yyyy")</td>
                    <td>@item.DiaChi</td>
                    <td>@item.SDT</td>
                    <td>@item.NgayVao.ToString("dd/MM/yyyy")</td>
                    <td>@item.TenChiDoan</td>
                    <td>
                        @Html.ActionLink("Sửa", "Edit", new { id = item.MaDoanVien }, new { @class = "btn btn-success" }) |
                        @Html.ActionLink("Xóa", "Delete", new { id = item.MaDoanVien }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="9" class="text-center">Không có dữ liệu.</td>
            </tr>
        }
    </tbody>
</table>

<style>

th {
    white-space: nowrap; /* Không cho xuống dòng */
   
}

td {
    white-space: nowrap; /* Không cho xuống dòng */
   
}

</style>

